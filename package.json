{
  "name": "REPLACE_ME",
  "description": "REPLACE_ME",
  "author": "REPLACE_ME",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "REPLACE_ME",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:monkey"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "monkey",
        "extensions": [
          ".mky"
        ],
        "aliases": ["Monkey", "Monkeylang"]
      }
    ],
    "configuration": {
      
      "type": "object",
			"title": "Example configuration",
			"properties": {
				"monkeyLanglsp.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"monkeyLanglsp.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
      
      }
    },
    "configurationDefaults": {
      "[monkey]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
